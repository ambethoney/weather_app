@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'
@import '../../node_modules/react-geosuggest/module/geosuggest.css'
@import url('https://fonts.googleapis.com/css?family=Roboto:400,500i,700');

sm = 768px
xs = 560px

html
body
  background offwhite
  font-family 'Roboto', sans-serif;
  height 100%

main
  height 100%

.title
  text-align center

.dashboard-grid
  display flex
  flex-wrap wrap
  max-width 1200px
  margin 40px auto 0

.card
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid #99cc99
  background white
  box-shadow 0 0 0 5px rgba(153,204,153,0.03);
  position relative
  width 100%
  flex-grow 1
  text-align center
  h3
    margin 0
  @media screen and (min-width: sm)
    max-width 25%

.card-header
  display flex
  justify-content space-between
  margin-bottom 25px

/*
  Single View
*/

.daily-grid
  display flex
  flex-direction row
  flex-wrap wrap
  align-self flex-end
  @media screen and (min-width: sm)
    flex-wrap nowrap

.today
.daily-forecast
  padding 1rem
  color rgba(0,0,0,0.5)
  border 1px solid lightgrey
  width 100%
  flex-grow 1
  text-align center


  .tempHigh
    color #FC6E51
    margin 0
  .tempLow
    color #698FF5
    margin 0
  .daily-skycon
    width 100px
